<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img style="width:130px; height:45px" src="~/img/Logo.png" alt="eTools Logo"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    <ul class="navbar-nav flex-grow-1">
                        @*Navigation to subsytem pages*@

                        @*Purchasing Subsystem*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Purchasing</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-info" asp-page="/PurchasingPages/Index">Purchasing - Info</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/PurchasingPages/ViewOrders">View Orders</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/PurchasingPages/Purchasing">Purchasing</a></li>
                            </ul>
                        </li>

                        @*Receiving Sybsystem*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Receiving</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-info" asp-page="/ReceivingPages/Index">Receiving - Info</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/ReceivingPages/OutStandingPurchaseOrders">Receiving</a></li>
                            </ul>
                        </li>
                        
                        @*Rentals testing*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Rentals</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-info" asp-page="/RentalPages/Index">Rentals - Info</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/RentalPages/Renting">Renting</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/RentalPages/Returns">Returning</a></li>
                            </ul>
                        </li>
                        @*Sales Stuff*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Sales</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-info" asp-page="/SalesPages/Index">Sales - Info</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/SalesPages/Shopping">Shopping</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/SalesPages/Cart">Shopping Cart</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/SalesPages/Checkout">Checkout</a></li>
                                <li><a class="dropdown-item text-info" asp-page="/SalesPages/Refund">Refund</a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - eTools - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>